<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.appdev_soumitri.humbirds.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.appdev_soumitri.humbirds.ui.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search"/>

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.appdev_soumitri.humbirds.ui.dashboard.DashboardFragment"
        android:label="Account"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_OP_playlist"
        android:name="com.appdev_soumitri.humbirds.ui.opPlaylist.OPplaylistFragment"
        android:label="OP Playlist"
        tools:layout="@layout/fragment_op"/>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.appdev_soumitri.humbirds.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>